<h1>Listing appointments</h1>

<h2>Course: <%="#{@assignment.course.year}-#{@assignment.course.semester}"%> </h2>
<table>
  <tr>
    <th>Student</th>
    <th>Time</th>
    <th>Status</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @appointments.each do |appointment| %>
  <tr>
    <td><%= appointment.assignment.student.name %></td>
    <td><%= appointment.time %></td>
    <td><%= appointment.status %></td>
    <td><%= link_to 'Show', appointment %></td>
    <td><%= link_to 'Edit', edit_assignment_appointment_path(@assignment, appointment) %></td>
    <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

