<h1>Listing students</h1>

<table>
  <% @students.each do |student| %>
  <%= content_tag_for(:tr, student) do %>
      <td><%= link_to "#{student.name}(#{student.account})", student %></td>
    <td><%= button_to 'Edit', edit_student_path(student) %></td>
    <td><%= button_to 'Remove', student, method: :delete , remote: true%></td>
  </tr>
<%end%>
<% end %>
</table>

<br />

<%= button_to 'New Student', new_student_path %>
